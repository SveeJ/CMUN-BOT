{
  "compilerOptions": {
    "target": "ES2020",                         
    "module": "commonjs",                     
    "outDir": "./dist",                        
    "rootDir": "./src",                       
    "removeComments": true,                
    "strict": true,                         
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,  
    "importsNotUsedAsValues": "error",
    "resolveJsonModule": true
  }
}